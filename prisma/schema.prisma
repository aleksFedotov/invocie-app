// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model User {
  id String @id @default(cuid())
  email String
  password String
  @@unique(fields: [email])
}

model Invoice {
  id_db String @id @default(cuid())
  id String 
  createdAt String
  paymentDue String
  description String
  paymentTerms Int
  clientName String
  clientEmail String
  status String
  senderAddress SenderAddress?
  clientAddress ClientAddress?
  items Item[]
  total Float
  
  
}

model SenderAddress {
  id String @id @default(cuid())
  street String
  city String
  postCode String
  country String
  invoice Invoice @relation(fields: [invoiceId], references: [id_db], onDelete: Cascade)
  invoiceId String
}


model ClientAddress {
  id String @id @default(cuid())
  street String
  city String
  postCode String
  country String
  invoice Invoice @relation(fields: [invoiceId], references: [id_db], onDelete: Cascade)
  invoiceId String
}

model Item {
  id String @id @default(cuid())
  name String
  quantity Float
  price Float
  total Float
  invoice Invoice @relation(fields: [invoiceId], references: [id_db], onDelete: Cascade, onUpdate: Cascade)
  invoiceId String
}


